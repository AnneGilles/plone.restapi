<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="plone.restapi">

  <includeDependencies package="." />

  <include file="meta.zcml"/>
  <subscriber
     for="*
          zope.app.publication.interfaces.IBeforeTraverseEvent"
     handler=".events.mark_as_api_request"
     />

  <genericsetup:registerProfile
      name="default"
      title="plone.restapi"
      directory="profiles/default"
      description="Installs the plone.restapi package"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <include package=".demo" />
  <include package=".browser" />

  <adapter factory=".adapter.SerializeToJson" />
  <adapter factory=".adapter.SerializeSiteRootToJson" />
  <adapter factory=".adapter.SerializeImageToJson" />
  <adapter factory=".adapter.SerializeFileToJson" />

</configure>
